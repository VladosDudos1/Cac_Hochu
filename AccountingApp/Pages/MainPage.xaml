<Page x:Class="AccountingApp.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AccountingApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel  Margin="5">
            <TextBlock Text="Sales" Margin="5"/>
            <DataGrid x:Name="DGSale" Margin="5" DisplayMemberPath="Name"/>
        </StackPanel>

        <StackPanel Margin="5" Grid.Column="1">
            <TextBlock Text="Arrival" Margin="5"/>
            <DataGrid x:Name="DGArrival" Margin="5" DisplayMemberPath="Name"/>
        </StackPanel>
    </Grid>
</Page>
